<dashboard isDashboard="false" script="javascript/setup_page.js" stylesheet='styles/setup_page.css' hideTitle="true"
  version="1.1">
  <label>Configuration</label>
  <row>
    <panel>
      <title>OpenAI Platforms Secret Key Page</title>
      <html>
      <h3>Retrieve your API Key <a href="https://platform.openai.com/settings/organization/api-keys"
          target="_blank">here</a></h3>
      <div id="main_container">
        <div>
          <h2>API Keys Visible to you:</h2>
          <hr/>
          <ul id="password-list" style="margin-left: 1em; list-style-type: disc;"></ul>
          <hr/>
        </div>
        <div>
          <h2>Create new API Key</h2>
          <hr/>
          <div class="text">
            <span>API Key Name</span>
            <input type="text" id="api_name_input" />
          </div>
          <div class="text">
            <span>API (Secret) Key</span>
            <input type="password" id="api_key_input" />
          </div>
          <hr/>
          <button id="save_api_button">Save or Update (by using the same API Name)</button>
          <div class="success">API Key saved successfully, redirecting to app...</div>
          <div class="error">Issue encountered while saving the API key, details below:</div>
          <code id="error_details"></code>
        </div>
      </div>
      </html>
    </panel>
  </row>
</dashboard>
